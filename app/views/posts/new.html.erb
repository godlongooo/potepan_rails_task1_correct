<!-- 新規登録ページ -->
<h1 class="new_head">予定の新規追加</h1>

<!-- フォーム一覧 -->
<%= form_with model: @post do |f| %>
    <!-- フォーム全体 -->
    <div class="new_flame">

        <!-- タイトル入力フォーム -->
        <p class="new_title_text"><%= f.label :title ,"タイトル" %></p>
        <p class="new_title_form"><%= f.text_field :title %></p>
        <!-- エラーメッセージ -->
        <% if @post.errors.include?(:title) %>
            <p class="new_error"><%= @post.errors.full_messages_for(:title).first %></p>
        <% end %>

    <!-- 開始日入力フォーム -->
    <div class="new_start">
        <p class="new_start_text"><%= f.label :start_date ,"開始日" %></p>
        <p class="new_start_form"><%= f.date_field :start_date %></p> <!--カレンダー入力 -->
        <!--エラーメッセージ -->
        <% if @post.errors.include?(:start_date) %>
            <p class="new_error"><%= @post.errors.full_messages_for(:start_date).first %></p>
        <% end %>
    </div>

    <!-- 終了日入力フォーム -->
    <div class="new_end">
        <p class="new_end_text"><%= f.label :end_date ,"終了日" %></p>
    <p class="new_end_form"><%= f.date_field :end_date %></p> <!--カレンダー入力 -->
    <!-- エラーメッセージ -->
        <% if @post.errors.include?(:end_date) %>
            <p class="new_error"><%= @post.errors.full_messages_for(:end_date).first %></p>
        <% end %>
    </div>

    <!-- 終日選択フォーム -->
    <p class="new_allday_form"><%= f.check_box :allday %> 終日の場合はチェックを入れます</p>

    <!-- メモ入力フォーム -->
    <p class="new_memo_text"><%= f.label :memo ,"スケジュールメモ" %></p>
    <p class="new_memo_form"><%= f.text_area :memo %></p>

    <!-- 一覧画面に飛ぶ -->
    <%= link_to "キャンセル", posts_path, class:"btn new_cancel" %></li>
    <!-- 送信フォーム -->
    <%= f.submit " 保存 ", class:"new_save" %>

    </div>
<% end %>

<!-- フラッシュメッセージ -->
<div class="flash_message"><%= flash[:notice] %></div>